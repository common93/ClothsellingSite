@model List<ClothingStore.Core.Entities.CartItem>

<h2 class="mb-4">Your Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:40%">Product</th>
                <th>Price</th>
                <th style="width:150px;">Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <img src="@item.Product.ImageUrl"
                                 style="width:60px;height:60px;object-fit:cover;border-radius:5px;" />
                            <strong>@item.Product.Name</strong>
                        </div>
                    </td>

                    <td>₹@item.Product.Price</td>

                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <a class="btn btn-sm btn-outline-dark"
                               asp-action="Decrease" asp-route-id="@item.ProductId">−</a>

                            <span><strong>@item.Quantity</strong></span>

                            <a class="btn btn-sm btn-outline-dark"
                               asp-action="Increase" asp-route-id="@item.ProductId">+</a>
                        </div>
                    </td>

                    <td>
                        ₹@(item.Product.Price* item.Quantity)
                    </td>

                    <td>
                        <a class="btn btn-danger btn-sm"
                           asp-action="Remove" asp-route-id="@item.ProductId">
                            Remove
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between mt-3">
        <a class="btn btn-secondary" asp-action="Clear">Clear Cart</a>

        <a class="btn btn-success" asp-action="Checkout">
            Proceed to Checkout
        </a>
    </div>
}
