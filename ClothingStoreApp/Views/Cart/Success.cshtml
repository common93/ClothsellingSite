@{
    ViewData["Title"] = "Order Successful";
    var orderId = ViewBag.OrderId;
}

<div class="container d-flex justify-content-center mt-5">
    <div class="text-center p-4 bg-white shadow rounded" style="max-width: 450px; width:100%">

        <div class="mb-3">
            <span style="font-size: 60px; color:#28a745;">✅</span>
        </div>

        <h2 class="fw-bold mb-2">Order Placed Successfully!</h2>
        <p class="fs-5 text-muted">Thank you for shopping with us.</p>

        <div class="mt-3 p-3 bg-light border rounded">
            <h5>Your Order ID:</h5>
            <p class="fw-bold text-dark fs-5 mb-0">#@orderId</p>
        </div>

        <p class="mt-3 text-secondary">You will receive a confirmation email shortly.</p>

        <a href="/" class="btn btn-dark w-100 mt-4">Continue Shopping</a>

        <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@orderId"
           class="btn btn-outline-secondary w-100 mt-2">
            View Order Details
        </a>
        <a asp-controller="Order" asp-action="Invoice" asp-route-id="@orderId"
           class="btn btn-secondary w-100 mt-2">
            📄 Download Invoice
        </a>

    </div>
</div>
