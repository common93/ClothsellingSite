@* @{
    Layout = "~/Views/Shared/_Layout.cshtml";
} *@
<!DOCTYPE html>
<html>
<head>
    <title>Admin Panel — Clothing Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background: #f5f6fa;
        }

        .sidebar {
            width: 260px;
            background: #111827;
            color: #fff;
            position: fixed;
            height: 100vh;
            padding: 20px 0;
        }

            .sidebar a {
                color: #9ca3af;
                display: block;
                padding: 12px 22px;
                text-decoration: none;
                font-size: 15px;
                transition: .2s;
            }

                .sidebar a:hover, .sidebar a.active {
                    background: #1f2937;
                    color: #fff;
                }

        .content {
            margin-left: 260px;
            width: calc(100% - 260px);
            padding: 20px;
        }

        .topbar {
            background: white;
            padding: 12px 20px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            box-shadow: 0 2px 6px rgba(0,0,0,.08);
        }

        .card-stats {
            border-radius: 12px;
            padding: 22px;
            background: white;
            box-shadow: 0 2px 6px rgba(0,0,0,.07);
            transition: .3s;
        }

            .card-stats:hover {
                transform: scale(1.02);
            }

        .avatar {
            background: #111827;
            color: white;
            padding: 10px 14px;
            border-radius: 50%;
        }
    </style>
</head>
<body>

    <div class="sidebar">

        <h4 class="text-center mb-4 fw-bold">🛍 Admin Panel</h4>

        <a href="/Dashboard" class="active"><i class="ri-bar-chart-box-line me-2"></i>Dashboard</a>
        @* <a href="/Dashboard/Product"><i class="ri-t-shirt-fill me-2"></i>Products</a> *@
        <a href="/Dashboard/AdminProductList"><i class="ri-t-shirt-fill me-2"></i>Products</a>
        <a href="/Dashboard/Orders"><i class="ri-shopping-bag-3-line me-2"></i>Orders</a>
        <a href="/Dashboard/Users"><i class="ri-user-3-line me-2"></i>Users</a>
        <a href="/Dashboard/Settings"><i class="ri-settings-3-line me-2"></i>Settings</a>

        <hr class="text-secondary my-3">

        <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="px-3">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-light w-100"><i class="ri-logout-box-r-line me-2"></i>Logout</button>
        </form>

    </div>

    <div class="content">

        <!-- Top bar -->
        <div class="topbar">
            <h5 class="fw-bold">Dashboard</h5>

            <div class="d-flex align-items-center gap-3">
                <i class="ri-notification-3-line fs-4"></i>
                <div class="d-flex align-items-center gap-2">
                    <span>@User.Identity.Name</span>
                    <span class="avatar"><i class="ri-user-3-line"></i></span>
                </div>
            </div>
        </div>

        @RenderBody()

    </div>

</body>
</html>
