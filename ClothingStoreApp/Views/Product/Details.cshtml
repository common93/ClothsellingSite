@model ClothingStore.Core.Entities.Product
@{
    ViewData["Title"] = Model.ProductName;
}

<div class="container mt-5">

    <div class="row">
        <!-- Product Image -->
        <div class="col-md-5 text-center">
            <img src="@Model.ProductImageUrl" alt="@Model.ProductName"
                 class="img-fluid rounded shadow"
                 style="max-height:350px; object-fit:cover;">
        </div>

        <!-- Product Info -->
        <div class="col-md-7">

            <h2 class="fw-bold">@Model.ProductName</h2>

            <p class="text-muted">@Model.ProductDescription</p>

            <h4 class="text-danger fw-bold mb-3">₹@Model.ProductPrice</h4>

            <p><strong>Category:</strong> @Model.ProductCategory</p>

            <p>
                <strong>Stock:</strong>
                @if (Model.ProductStockQuantity > 0)
                {
                    <span class="text-success">In Stock (@Model.ProductStockQuantity)</span>
                }
                else
                {
                    <span class="text-danger">Out of Stock</span>
                }
            </p>

            <a href="/Cart/Add/@Model.ProductId" class="btn btn-dark btn-lg mt-3">
                <i class="bi bi-cart"></i> Add to Cart
            </a>

            <a href="/Product" class="btn btn-outline-secondary btn-lg mt-3 ms-2">
                Back to Products
            </a>
        </div>
    </div>
</div>
