            <a class="nav-link text-white" asp-controller="Product" asp-action="Index">Shop</a>
            <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">Cart</a>
            <a asp-controller="Account" asp-action="Logout" class="nav-link text-white">Logout</a> *@
